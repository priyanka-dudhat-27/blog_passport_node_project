
<%- include('header')%>
<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">
        
        <div class="container">
            <%if (locals.flash.success.length>0 && locals.flash.success){%>
                <div class="alert alert-success">
                    <%=locals.flash.success%></div>
            <%}%>
            <%if (locals.flash.error.length>0 && locals.flash.error){%>
                <div class="alert alert-danger">
                    <%=locals.flash.danger%></div>
            <%}%>
            <div class="row">
                <form>
                    <input type="text" name="search" value="<%=search%>">
                    <input type="submit" name="searching" value="Search" class="btn btn-warning">
                </form>
               <form action="/admin/slider/deleteMultipleRecords" method="post">
                <div class="col-lg-12">
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>
                                        <input type="checkbox" id="checkAll">
                                        <button type="submit"><i class="fa fa-trash" style="color: white;"></i></button>
                                    </th>
                                    <th>No</th>
                                    <th>Title</th>
                                    <th>Link</th>
                                    <th class="text-right">Description</th>
                                    <th class="text-right">Image</th>
                                    <th>Action</th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                <% var no=1; for(var add of sliderData){%>
                                <tr>
                                    <td><input type="checkbox" value="<%=add.id%>"
                                        name="sliderIds">
                                    </td>
                                
                                    <td><%= no++%></td>
                                    <td><%= add.slidertitle%></td>
                                    <td><%= add.sliderlink%></td>
                                    <td><%= add.sliderdescription%></td>
                            
                                  
                                    <td><img src="<%= add.sliderimage%>" alt="image" width="200" height="200"></td>
                                    <td><a href="/admin/slider/delete_slider/<%= add.id%>"><i class="fa fa-trash"></i></a>||
                                        <a href="/admin/slider/edit_slider/?id=<%= add.id%>"><i class="fa fa-edit"></i></a></td>
                            
                                </tr>
                               <% }%>
                            </tbody>
                        </table>
                    </div>
                </div>
               </form>
            </div>
            <%- include('footer')%>
            <script>
                $("#checkAll").click(function () {
                    $('input:checkbox').not(this).prop('checked', this.checked);
                });
            </script>