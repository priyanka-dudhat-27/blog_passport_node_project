<section class="portfolio">
    <div class="container">
        <div class="section-heading-white">
            <h2>Recent Photos</h2>
            <div class="section-dec"></div>
        </div>
        <div class="row">
            <div class="col-md-12">  
                <div id="owl-portfolio" class="owl-carousel owl-theme">
                    <%for(var pd of photosData){%>
                        <div class="item">
                            <figure>
                              <img alt="portfolio" src="<%=pd.photosimage%>">
                              <figcaption>
                                  <h3><%=pd.title%></h3>
                                  <p><%=pd.description%></p>
                              </figcaption>
                          </figure>								    
                      </div>
                   
                    <%}%>
                </div>
            </div>
        </div>
        <div class="owl-navigation">
          <a class="btn prev fa fa-angle-left"></a>
          <a class="btn next fa fa-angle-right"></a>
          <a href="work-3columns.html" class="go-to">Go to portfolio</a>
        </div>
    </div>
</section>

<section class="testimonials">
    <div class="container">
        <div class="section-heading">
            <h2>What Others saying</h2>
            <div class="section-dec"></div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div id="owl-demo" class="owl-carousel owl-theme">
                    
                  <%for(var od of othersData){%>
                    <div class="item">
                        <div class="testimonials-post">
                            <span class="fa fa-quote-left"></span>
                            <p><%=od.description%></p>
                            <h6><%=od.name%> - <em><%=od.country%>, <%=od.city%></em></h6>
                        </div>
                  </div>
                  <%}%>
                    
                </div>
            </div>
        </div>
    </div>
</section>

<section class="call-to-action-3">
    <div class="container">
        <div class="col-md-12">
            <h4 class="col-md-10 col-sm-8">Read your lastest newsletters, we have an offer for you!</h4>
            <div class="btn-black col-md-2 col-sm-4"><a href="#">Take it now</a></div>
        </div>
    </div>
</section>

<section class="blog-posts">
    <div class="container">
        <div class="section-heading">
            <h2>Latest Posts</h2>
            <div class="section-dec"></div>
        </div>
        <div class="blog-item">
            <%postsData.map((v,i)=>{%>
                <div class="col-md-4">
                    <a href="blog-single.html"><img src="<%=v.postsimage%>" alt=""></a>
                    <h3><a href="blog-single.html"><%=v.title%></a></h3>
                    <span><a href="#"><%=v.username%></a> / <a href="#"><%=v.created_date%></a> / <a href="#"><%=v.category%></a></span>
                    <p><%=v.description.slice(0,100)%></p>
                    <div class="read-more">
                        <a href="/blog_single/<%=v.id%>">Read more</a>
                    </div>                
                </div>
            <%})%>
            
    </div>

        

    </div>
</section>
<%-include('user_footer')%>