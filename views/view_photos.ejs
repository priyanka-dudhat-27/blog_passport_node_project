
<%- include('header')%>
<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">
        
        <div class="container">
            <%if (locals.flash.success.length>0 && locals.flash.success){%>
                <div class="alert alert-success">
                    <%=locals.flash.success%></div>
            <%}%>
            <%if (locals.flash.error.length>0 && locals.flash.error){%>
                <div class="alert alert-danger">
                    <%=locals.flash.danger%></div>
            <%}%>
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th class="text-right">Image</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                <% var no=1; for(var add of singleData){%>
                                <tr>
                                    <td><%= no++%></td>
                                    <td><%= add.title%></td>
                                    <td><%= add.description%></td>
                                    <td><img src="<%=add.photosimage%>" alt=""></td>
                        
                            
                                  
                                    <td><a href="/admin/photos/delete_photos/<%= add.id%>"><i class="fa fa-trash"></i></a>||
                                        <a href="/admin/photos/edit_photos/?id=<%= add.id%>"><i class="fa fa-edit"></i></a></td>
                                    <td></td>
                                </tr>
                               <% }%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <%- include('footer')%>
