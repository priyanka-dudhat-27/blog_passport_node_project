
<%- include('header')%>
<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">
        
        <div class="container">
           
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Category</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% var no=1; for(var add of singleData){%>
                                <tr>
                                    <td><%= no++%></td>
                                    <td><%=add.category%></td>
                                    <td><%= add.title.slice(0,20)%>...</td>
                                    <td><%= add.description.slice(0,50)%>...</td>
                                    <td><img src="<%=add.postsimage%>" alt=""></td>
                        
                            
                                  
                                    <td><a href="/admin/posts/delete_posts/<%= add.id%>"><i class="fa fa-trash"></i></a>||
                                        <a href="/admin/posts/edit_posts/?id=<%= add.id%>"><i class="fa fa-edit"></i></a></td>
                                    </td>
                                </tr>
                               <% }%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <%- include('footer')%>
