<%- include('header')%>
<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">
        
        <div class="container">
            <%if (locals.flash.success.length>0 && locals.flash.success){%>
                <div class="alert alert-success">
                    <%=locals.flash.success%></div>
            <%}%>
            <%if (locals.flash.error.length>0 && locals.flash.error){%>
                <div class="alert alert-danger">
                    <%=locals.flash.danger%></div>
            <%}%>
            <div class="row">
                <form>
                    <input type="text" name="search" value="">
                    <input type="submit" name="searching" value="Search" class="btn btn-warning">
                </form>
                <div class="col-lg-12">
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Subject</th>
                                    <th>Message</th>
                                    <th>Action</th>                                   
                                </tr>
                            </thead>
                            <tbody>
                                <% var no=1; for(var sd of contactRecord){%>
                                <tr>
                                    <td><%=no++%></td>
                                    <td><%=sd.name%></td>
                                    <td><%=sd.email%></td>
                                    <td><%=sd.subject%></td>
                                    <td><%=sd.message%></td>                                    
                                    <td><a href="/admin/contact/delete_contact/<%=sd.id%>"><i class="fa fa-trash"></i></a>||
                                        <a href="/admin/contact/update_contact/<%=sd.id%>"><i class="fa fa-edit"></i></a></td>
                                    </td>
                                </tr>
                               <% }%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <%- include('footer')%>
